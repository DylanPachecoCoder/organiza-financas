<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrganizaFinancas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#539CA3</item>
        <item name="colorPrimaryVariant">#009671</item>
        <item name="colorOnPrimary">#C2D7CD</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#7E9878</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <!-- Text color. -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.OrganizaFinancas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OrganizaFinancas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OrganizaFinancas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>