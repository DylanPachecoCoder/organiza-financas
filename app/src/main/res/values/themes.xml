<resources>
    <!-- Base application theme. -->
    <style name="Theme.OrganizaFinancas" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0100CC</item>
        <item name="colorPrimaryVariant">#009671</item>
        <item name="colorOnPrimary">#0E749F</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1B8135</item>
        <item name="colorSecondaryVariant">#81D396</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <!-- Text color. -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.OrganizaFinancas.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OrganizaFinancas.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OrganizaFinancas.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.OrganizaFinancas.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/background_color_chip_filter</item>
        <item name="android:textColor">@color/text_color_chip_filter</item>
        <item name="checkedIcon">@drawable/ic_chip_check</item>
    </style>

    <style name="Theme.OrganizaFinancas.Chip.Suggestion" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/background_color_chip_filter</item>
        <item name="android:textColor">@color/text_color_chip_filter</item>
        <item name="checkedIcon">@drawable/ic_chip_check</item>
        <item name="android:textSize">10sp</item>
        <item name="chipStartPadding">4dp</item>
        <item name="chipEndPadding">4dp</item>
    </style>

</resources>