<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/textview_payment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_font_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mercado pago" />

    <TextView
        android:id="@+id/textview_payment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_payment_name"
        tools:text="crÃ©dito" />

    <TextView
        android:id="@+id/textview_payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/text_font_size"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/textview_payment_name"
        app:layout_constraintTop_toBottomOf="@id/textview_payment_name"
        tools:text="10/04/24" />

    <TextView
        android:id="@+id/textview_payment_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_font_size"
        app:layout_constraintBottom_toBottomOf="@id/textview_payment_date"
        app:layout_constraintEnd_toEndOf="@id/textview_payment_type"
        app:layout_constraintTop_toBottomOf="@+id/textview_payment_type"
        tools:text="R$ 20,00" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/textview_payment_value"
        app:layout_constraintStart_toStartOf="@id/textview_payment_date" />

</androidx.constraintlayout.widget.ConstraintLayout>